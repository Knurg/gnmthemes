{#
/**
 * @file
 * Default theme implementation to display a two-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'layout',
    'layout--fullpx--none',
    'layout--twocol--fullpx--none',
  ]
%}

{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {% if content.title %}
      {% spaceless %}
        <div {{ region_attributes.title.addClass('layout__region', 'layout__region--title') }}>
          {{ content.title }}
        </div>
      {% endspaceless %}
    {% endif %}

    {% if content.top %}
      {% spaceless %}
        <div {{ region_attributes.top.addClass('layout__region', 'layout__region--top') }}>
          {{ content.top }}
        </div>
      {% endspaceless %}
    {% endif %}
  
    <div{{ create_attribute({'class': ['layout__region', 'layout__region--combined']}) }}>
      {% if content.first %}
        {% spaceless %}
          <div {{ region_attributes.first.addClass('layout__region', 'layout__region--combined', 'layout__region--first') }}>
            {{ content.first }}
          </div>
        {% endspaceless %}
      {% endif %}
      {% if content.second %}
        {% spaceless %}
          <div {{ region_attributes.second.addClass('layout__region', 'layout__region--combined', 'layout__region--second') }}>
            {{ content.second }}
          </div>
        {% endspaceless %}
      {% endif %}
    </div>
    
    {% if content.bottom %}
      {% spaceless %}
        <div {{ region_attributes.bottom.addClass('layout__region', 'layout__region--bottom') }}>
          {{ content.bottom }}
        </div>
      {% endspaceless %}
    {% endif %}
  </div>
{% endif %}